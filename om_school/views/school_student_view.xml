    <!-- Kanban View of School Class Division -->
    <record model="ir.ui.view" id="view_school_class_division_kanban">
        <field name="name">school.class.division.kanban</field>
        <field name="model">school.class.division</field>
        <field name="arch" type="xml">
            <kanban class="school_class_division_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="actual_strength"/>
                <field name="academic_year"/>
                <field name="teacher_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_res_partner_kanban">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings" style="text-align:center !important;">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul style="text-align:center !important;">
                                    <li t-if="record.actual_strength.raw_value">
                                        Strength :
                                        <field name="actual_strength"/>
                                    </li>
                                    <li t-if="record.student_count.raw_value">
                                        Students :
                                        <field name="student_count"/>
                                    </li>
                                    <li t-if="record.academic_year.raw_value">
                                        Academic Year :
                                        <field name="academic_year"/>
                                    </li>
                                    <li t-if="record.teacher_id.raw_value">
                                        Form Master :
                                        <field name="teacher_id"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

