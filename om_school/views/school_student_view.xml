<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="action_get_school_attendance" model="ir.actions.act_window">
        <field name="name">School Attendance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('class_division', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student attendance record !
            </p>
        </field>
    </record>
    <record id="action_get_school_timetable" model="ir.actions.act_window">
        <field name="name">School Timetable</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.timetable</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('division_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first timetable record !
            </p>
        </field>
    </record>


    <record model="ir.ui.view" id="student_info_kanban_view">
        <field name="name">student.info.kanban</field>
        <field name="model">student.info</field>
        <field name="arch" type="xml">
            <kanban create="0" class="o_res_partner_kanban">
                <field name="color"/>
                <field name="id"/>
                <field name="name"/>
                <field name="student_id"/>
                <field name="standard"/>
                <field name="school_class"/>
                <field name="gender"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-set="color" t-value="kanban_color(record.color.raw_value || record.name.raw_value)"/>
                        <div t-att-class="color + (record.color.raw_value == 1 ? ' oe_kanban_color_alert' : '')">
                            <div class="oe_kanban_box oe_kanban_color_border">
                                <div class="oe_kanban_box_header oe_kanban_color_bgdark oe_kanban_color_border oe_kanban_draghandle">
                                    <table class="oe_kanban_table">
                                        <tr>
                                            <td class="oe_kanban_title1" align="left" valign="middle"
                                                style="padding-left:10px;">
                                                <h4>
                                                    <a type="open">
                                                        <field name="name"/>
                                                    </a>
                                                </h4>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_box_show_onclick_trigger oe_kanban_color_border">
                                    <table class="oe_kanban_table">
                                        <tr width="300">
                                            <td valign="top" width="64" align="left">
                                                <a type="open">
                                                    <img heigh="80" width="80"
                                                         t-att-src="kanban_image('student.info', 'image', record.id.raw_value)"
                                                         alt="image"/>
                                                </a>
                                            </td>
                                            <td valign="top" align="left" style="padding-left:10px;">
                                                <table>
                                                    <tr>
                                                        <td>Student ID :</td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="student_id"/>
                                                            </b>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Standard :</td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="standard"/>
                                                            </b>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Class :</td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="school_class"/>
                                                            </b>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Gender :</td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="gender"/>
                                                            </b>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--  Search View of Students -->
    <record id="view_school_student_search" model="ir.ui.view">
        <field name="name">student.info.search</field>
        <field name="model">student.info</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_id" filter_domain="['|', '|', '|', ('student_id', 'ilike', self), ('name', 'ilike', self),
                ('school_class', 'ilike', self), ('standard', 'ilike', self)]"/>
                <field name="name" string="Name"/>
                <field name="standard"/>
                <field name="school_class" widget="badge"/>
            </search>
        </field>
    </record>
    <!--   -->
    <record id="view_school_student_tree" model="ir.ui.view">
        <field name="name">student.info.tree</field>
        <field name="model">student.info</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0" export_xlsx="0">
                <field name="student_id"/>
                <field name="name" string="Name"/>
                <field name="age"/>
                <field name="standard"/>
                <field name="school_class" widget="badge"/>
                <field name="gender" widget="badge"/>
                <field name="address_one"/>
            </tree>
        </field>
    </record>

    <record id="view_school_student_form" model="ir.ui.view">
        <field name="name">student.info.form</field>
        <field name="model">student.info</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <sheet>
                    <div class="oe_button_box top-align-buttons" name="button_box"
                         style="margin-top: -120px">
                        <button name="%(om_school.action_get_school_attendance)d" type="action" class="oe_stat_button"
                                icon="fa-calendar" string="Attendance"/>
                        <button name="om_school.action_get_exam_results" type="action" class="oe_stat_button"
                                icon="fa-archive" string="Exam Results"/>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h3>
                            <field name="student_id" readonly="1"/>
                        </h3>
                        <h2>
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <field name="name"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="standard"/>
                            <!--                            <field name="standard" widget="selection"/>-->
                            <field name="school_class"/>
                            <field name="addmission_date"/>
                            <field name="academic_year"/>
                            <field name="school"/>
                            <field name="application_number" invisible="1"/>
                        </group>
                        <group string="General Information">
                            <field name="gender" widget="radio"/>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                        </group>
                    </group>
                    <group>
                        <group string="Address Information">
                            <label for="address_one" string="Address"/>
                            <div class="o_address_format">
                                <field name="address_one" placeholder="address..." class="o_address_street"/>
                                <field name="district" placeholder="district..." class="o_address_street"/>
                                <!--                                <field name="country_id" placeholder="Country" class="o_address_country,oe_no_button" required="1" options="{&quot;no_open&quot;: True}" attrs="{'readonly':[('state','=','alumni')]}"/>-->
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <!--                                <field name="state_id" class="o_address_state" domain="[('country_id','=',country_id)]" placeholder="State" options="{&quot;no_open&quot;: True}" required="1" attrs="{'readonly':[('state','=','alumni')]}"/>-->
                                <!--                                <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly':[('state','=','alumni')]}"/>-->
                            </div>
                        </group>
                        <group>
                            <field name="class_division"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Parents">
                            <field name="reference_ids" nolabel="1">
                                <tree string="Reference" editable="top">
                                    <field name="parent_name"/>
                                    <field name="relation"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Previous School">
                            <field name="previous_school_ids">
                                <tree editable="top">
                                    <field name="name"/>
                                    <field name="standard"/>
                                    <field name="grade"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_student_information" model="ir.actions.act_window">
        <field name="name">Student Information</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.info</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student record !
            </p>
        </field>
    </record>

