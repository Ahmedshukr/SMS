    <record id="view_school_timetable_form" model="ir.ui.view">
        <field name="name">school.timetable.form</field>
        <field name="model">school.timetable</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <group>
                        <group string="Academic Year Information">
                            <field name="academic_year"/>
                            <field name="school" readonly="1"/>
                        </group>
                        <group string="Standard Information">
                            <field name="class_id"/>
                            <field name="division_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Saturday">
                            <field name="timetable_sat" domain="[('week_day','=', 5)]"
                                   context="{'default_week_day': '5'}">
                                <tree string="Saturday" editable="bottom">
                                    <field name="period_id"/>
                                    <field name="time_from" widget="float_time"/>
                                    <field name="time_till" widget="float_time"/>
                                    <field name="subject"/>
                                    <field name="faculty_id"/>
                                    <field name="week_day" invisible='1'/>
                                </tree>
                            </field>
                        </page>
                        <page string="Sunday">
                            <field name="timetable_sun" domain="[('week_day','=', 6)]"
                                   context="{'default_week_day': '6'}">
                                <tree string="Sunday" editable="bottom">
                                    <field name="period_id"/>
                                    <field name="time_from" widget="float_time"/>
                                    <field name="time_till" widget="float_time"/>
                                    <field name="subject"/>
                                    <field name="faculty_id"/>
                                    <field name="week_day" invisible='1'/>
                                </tree>
                            </field>
                        </page>
                        <page string="Monday">
                            <field name="timetable_mon" domain="[('week_day','=', 0)]"
                                   context="{'default_week_day': '0'} ">
                                <tree string="Monday" editable="bottom">
                                    <field name="period_id"/>
                                    <field name="time_from" widget="float_time"/>
                                    <field name="time_till" widget="float_time"/>
                                    <field name="subject"/>
                                    <field name="faculty_id"/>
                                    <field name="week_day" invisible='1'/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tuesday">
                            <field name="timetable_tue" domain="[('week_day','=', 1)]"
                                   context="{'default_week_day': '1'}">
                                <tree string="Tuesday" editable="bottom">
                                    <field name="period_id"/>
                                    <field name="time_from" widget="float_time"/>
                                    <field name="time_till" widget="float_time"/>
                                    <field name="subject"/>
                                    <field name="faculty_id"/>
                                    <field name="week_day" invisible='1'/>
                                </tree>
                            </field>
                        </page>
                        <page string="Wednesday">
                            <field name="timetable_wed" domain="[('week_day','=', 2)]"
                                   context="{'default_week_day': '2'}">
                                <tree string="Wednesday" editable="bottom">
                                    <field name="period_id"/>
                                    <field name="time_from"/>
                                    <field name="time_till"/>
                                    <field name="subject"/>
                                    <field name="faculty_id"/>
                                    <!--<field name="week_day"/>-->
                                </tree>
                            </field>
                        </page>
                        <page string="Thursday">
                            <field name="timetable_thur" domain="[('week_day','=', 3)]"
                                   context="{'default_week_day': '3'}">
                                <tree string="Thursday" editable="bottom">
                                    <field name="period_id"/>
                                    <field name="time_from" widget="float_time"/>
                                    <field name="time_till" widget="float_time"/>
                                    <field name="subject"/>
                                    <field name="faculty_id"/>
                                    <field name="week_day" invisible='1'/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

